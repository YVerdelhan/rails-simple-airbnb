<p id="notice"><%= notice %></p>

<h1>All our flats (<%= @flats.count %>)</h1>


<div class="row">
  <% @flats.each do |flat| %>
  <div class="col-4">
    <div class="card" style="width: 18rem;">
      <div class="card-body bg-light">
        <h5 class="card-title"><%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <div class="d-flex">
          <div class="d-flex justify-content-between">
              <i class="material-icons mr-2">people</i>
            <span><%= flat.number_of_guests %></span>
          </div>
          <div class="d-flex ml-3">
            <i class="material-icons mr-2">euro_symbol</i>
            <span><%= flat.price_per_night %></span>
          </div>
        </div>
      </div>
      <%= link_to 'More info', flat, class: "p-2" %>
    </div>
  </div>
  <% end %>
</div>
